{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES5",
		"module": "commonjs",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "dist/types",
		"outDir": "dist/lib",
		"typeRoots": [
			"node_modules/@types"
		],
		"esModuleInterop": true,
		"importHelpers": true

	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"test",
		"vue",
		"dist"
	]
}
